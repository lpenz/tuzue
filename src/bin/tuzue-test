"""
Interactive interface tests with mock data
"""

import argparse

import tuzue
import tuzue.logger


def main():
    parser = argparse.ArgumentParser(description=__doc__)
    parser.add_argument(
        "--version", "-V", action="version", version="%(prog)s " + tuzue.version()
    )
    parser.add_argument(
        "--debug",
        "-d",
        default=None,
        help="Write debug information to the provided file",
    )
    args = parser.parse_args()
    struct = []
    for i in range(0, 400):
        struct.append(str(i))
    if args.debug:
        tuzue.logger.debug_on(args.debug)
    print("selected:", tuzue.navigate(struct))


if __name__ == "__main__":
    main()
